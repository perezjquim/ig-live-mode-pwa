<mvc:View 
    controllerName="com.perezjquim.iglivemode.pwa.controller.ToggleLiveMode" 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc">
    <Page 
    	title="{i18n>ToggleLiveMode}">
        <f:SimpleForm 
        	editable="false">
            <f:content>
                <HBox justifyContent="SpaceBetween">                    
                    <Button 
                    	icon="sap-icon://play" 
                    	press="onPressEnableLive" 
                    	text="{i18n>enable_live}" 
                    	type="Accept" />
                    <Button
                    	icon="sap-icon://stop" 
                    	press="onPressDisableLive" 
                    	text="{i18n>disable_live}" 
                    	type="Reject" />
                </HBox>
            </f:content>
        </f:SimpleForm>           
    </Page>
</mvc:View>