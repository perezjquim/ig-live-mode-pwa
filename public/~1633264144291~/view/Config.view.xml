<mvc:View 
    controllerName="com.perezjquim.iglivemode.pwa.controller.Config" 
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page 
        title="{i18n>Config}">
        <f:SimpleForm 
            editable="true">
            <f:content>
                <Label 
                    text="{i18n>user}" />
                <Input
                    value="{config>/user}"/>                       
                <Label 
                    text="{i18n>general_blacklist}" />
                <Table
                    items="{config>/general_blacklist}">
                    <headerToolbar>
                        <OverflowToolbar>
                            <content>
                                <core:Icon
                                    src="sap-icon://private"
                                    color="Negative"/>
                                <ObjectStatus
                                    state="Error"
                                    text="{i18n>general_blacklist_tip}"/>
                                <ToolbarSpacer />
                                <Button
                                    icon="sap-icon://add"
                                    type="Accept"
                                    press="onAddEntry" />
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>                    
                    <columns>
                        <Column>
                            <Label text="{i18n>user}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <HBox
                                    justifyContent="SpaceAround">
                                    <Avatar 
                                        busyIndicatorDelay="0"
                                        src="{ path: 'config>user_name', formatter: '.fetchAvatar' }"
                                        displaySize="S"
                                        showBorder="true" />                                    
                                    <Input 
                                        width="10rem"
                                        value="{config>user_name}"/>
                                    <Text 
                                        busyIndicatorDelay="0"
                                        wrapping="false"
                                        text="{ path: 'config>user_name', formatter: '.fetchFullName' }"/>  
                                    <Button
                                        icon="sap-icon://delete"
                                        type="Reject"
                                        press="onRemoveEntry"/>          
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>     
                <Label 
                    text="{i18n>live_whitelist}" />
                <Table
                    items="{config>/live_whitelist}">
                    <headerToolbar>
                        <OverflowToolbar>
                            <content>
                                <core:Icon
                                    src="sap-icon://role"
                                    color="Positive"/>
                                <ObjectStatus
                                    state="Success"
                                    text="{i18n>live_whitelist_tip}"/>                                    
                                <ToolbarSpacer />
                                <Button
                                    icon="sap-icon://add"
                                    type="Accept"
                                    press="onAddEntry" />
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>                    
                    <columns>
                        <Column>
                            <Label text="{i18n>user}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <HBox
                                    justifyContent="SpaceAround">
                                    <Avatar 
                                        busyIndicatorDelay="0"
                                        src="{ path: 'config>user_name', formatter: '.fetchAvatar' }"
                                        displaySize="S"
                                        showBorder="true" />                                    
                                    <Input 
                                        width="10rem"
                                        value="{config>user_name}"/>
                                    <Text 
                                        busyIndicatorDelay="0"
                                        wrapping="false"                  
                                        text="{ path: 'config>user_name', formatter: '.fetchFullName' }"/>  
                                    <Button
                                        icon="sap-icon://delete"
                                        type="Reject"
                                        press="onRemoveEntry"/>          
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>         
            </f:content>            
        </f:SimpleForm>        
    </Page>
</mvc:View>