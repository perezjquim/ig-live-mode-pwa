<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		beforeOpen="onBeforeOpenNewUserPopover"
		afterClose="onAfterCloseNewUserPopover"	
		placement="Bottom"
		showHeader="false">
		<content>
			<Input value="{new_user_prompt>/user_name}"/>
		</content>
		<footer>
			<OverflowToolbar>
				<Button
					text="{i18n>confirm}"
					type="Emphasized"
					press="onConfirmNewUser"/>						
				<ToolbarSpacer/>
				<Button
					text="{i18n>cancel}"
					type="Reject"
					press="onCancelNewUser"/>
			</OverflowToolbar>
		</footer>		
	</Popover>
</core:FragmentDefinition>
