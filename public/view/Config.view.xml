<mvc:View 
    controllerName="com.perezjquim.iglivemode.pwa.controller.Config" 
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form">
    <Page 
        title="{i18n>Config}">
        <f:SimpleForm 
            editable="true">
            <f:content>
                <Label 
                    text="{i18n>user}" />
                <Input
                    value="{config>/user}"
                    change="onConfigChange"/>                       
                <Label 
                    text="{i18n>general_blacklist}" />
                <TextArea
                    value="{config>/general_blacklist}"
                    change="onConfigChange"
                    rows="10"/>        
                <Label 
                    text="{i18n>live_whitelist}" />
                <TextArea
                    value="{config>/live_whitelist}"
                    change="onConfigChange"
                    rows="10"/>                                        
            </f:content>            
        </f:SimpleForm>        
    </Page>
</mvc:View>