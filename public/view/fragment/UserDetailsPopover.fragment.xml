<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		id="myPopover"
		title="{Name}"
		placement="Bottom" >
		<customHeader>
			<OverflowToolbar>
				<Title 
					text="{i18n>user_details}"/>
				<ToolbarSpacer/>
				<Button 
					type="Emphasized"
					text="{i18n>logoff}"
					press="onLogoff"/>
			</OverflowToolbar>
		</customHeader>
		<content>
			<HBox
				alignItems="Center"
				alignContent="Center"
				justifyContent="SpaceBetween">
				<items>
					<Avatar
						class="sapUiTinyMargin"
	                            		src="{ path: 'config>/authenticated_user_name', formatter: '.fetchAvatar' }"
		                            	displaySize="L"
		                            	showBorder="true"/>
					<Text 
						class="sapUiTinyMargin"
						text="{ path: 'config>/authenticated_user_name', formatter: '.fetchFullName' }" />		                          
				</items>
			</HBox>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>