<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog
		beforeOpen="onBeforeOpenLoginPrompt"
		afterClose="onAfterCloseLoginPrompt"
		escapeHandler=".dummyEscapeHandler"
		title="{i18n>login}">
		<content>
		       <VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
			    <items>
				     <Input placeholder="{i18n>user}" value="{login_prompt>/user}"/>
				     <Input placeholder="{i18n>pw}" type="Password" value="{login_prompt>/pw}"/>
			    </items>
		   	</VBox>
		</content>
		<beginButton>
			<Button
				text="{i18n>login}"
				type="Emphasized"
				press="onConfirmLogin"/>			
		</beginButton>
	</Dialog>
</core:FragmentDefinition>