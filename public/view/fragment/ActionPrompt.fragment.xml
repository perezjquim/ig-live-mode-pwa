<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog
		beforeOpen="onBeforeOpenPromptDialog"
		afterClose="onAfterClosePromptDialog"
		title="{i18n>confirm}">
		<content>
		        <f:SimpleForm 
		            editable="true">
		            <f:content>
				<Label 
	                	    text="{i18n>user}" />
		                <Text
		                    text="{config>/user}"/>           	            	
		                <Label 
		                    text="{i18n>pw}"/>
		                <Input
		                    value="{prompt>/pw}"
		                    type="Password"/>                       
		            </f:content>
		        </f:SimpleForm>        
		</content>
		<beginButton>
			<Button
				text="{i18n>confirm}"
				type="Emphasized"
				press="onConfirmAction"/>			
		</beginButton>
		<endButton>
			<Button
				text="{i18n>cancel}"
				type="Reject"
				press="onCancelAction"/>
		</endButton>		
	</Dialog>
</core:FragmentDefinition>